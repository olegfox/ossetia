{% macro listTab(photos) %}
    <div class="news news--all">
        {% for photo in photos %}
            <a class="news-block" href="{{ path('frontend_photo_one', {slug: photo.slug}) }}">
                <div class="cover"><img src="{{ image(photo.webPath).zoomCrop(170, 190).jpeg(100) }}"></div>
                <div class="short-block">
                    <div class="date">{{ photo.created|localizeddate('long', 'none', null, null, 'd MMMM Y') }}</div>
                    <div class="title">{{ photo.title }}</div>
                    <div class="content">{{ photo.description }}</div>
                </div>
            </a>
        {% endfor %}
        {% if photos.count is defined %}
            {{ knp_pagination_render(photos) }}
        {% endif %}
    </div>
{% endmacro %}

{% macro gallery(photo) %}
    <div class="wrap-gallery">
        <div class="gallery">
            <a href="{{ asset(photo.webPath) }}">
                <img src="{{ image(photo.webPath).zoomCrop(500, 500).jpeg(100) }}" alt="{{ photo.title }}"/>
            </a>
            {% for p in photo.photos %}
                <a href="{{ asset(p.link) }}">
                    <img src="{{ image(p.link).zoomCrop(500, 500).jpeg(100) }}" alt="{{ photo.title }}"/>
                </a>
            {% endfor %}
        </div>
    </div>
{% endmacro %}

{% macro lastPhoto(photo) %}
    <div class="wrap-gallery">
        <h2>{{ photo.title }}</h2>
        <div class="gallery">
            <a href="{{ path('frontend_photo_one', {slug: photo.slug}) }}">
                <img src="{{ image(photo.webPath).zoomCrop(500, 500).jpeg(100) }}" alt="{{ photo.title }}"/>
            </a>
        </div>
    </div>
{% endmacro %}
