{% extends 'SiteMainBundle:Backend:layout.html.twig' %}

{% block content -%}
    <h1>{{ 'backend.client.h1_list'|trans }}</h1>

    {% if entities|length > 0 %}
        <table class="records_list table table-striped table-bordered">
            <thead>
            <tr>
                <th>{{ 'backend.client.fio'|trans }}</th>
                <th>{{ 'backend.client.phone'|trans }}</th>
                <th>{{ 'backend.client.company'|trans }}</th>
                <th>{{ 'backend.client.email'|trans }}</th>
                <th>{{ 'backend.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('backend_client_show', { 'id': entity.id }) }}">{{ entity.fio }}</a></td>
                    <td>{{ entity.company }}</td>
                    <td>{{ entity.email }}</td>
                    <td>
                        <ul class="nav nav-pills">
                            <li>
                                <a href="{{ path('backend_client_show', { 'id': entity.id }) }}">{{ 'backend.show'|trans }}</a>
                            </li>
                            <li>
                                <a href="{{ path('backend_client_edit', { 'id': entity.id }) }}">{{ 'backend.edit'|trans }}</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ knp_pagination_render(entities) }}
    {% else %}
        <div class="alert alert-warning">
            {{ 'backend.client.empty_list'|trans }}
        </div>
    {% endif %}

    <ul class="nav nav-pills">
        <li class="active">
            <a href="{{ path('backend_client_new') }}">
                {{ 'backend.create'|trans }}
            </a>
        </li>
    </ul>
{% endblock %}
